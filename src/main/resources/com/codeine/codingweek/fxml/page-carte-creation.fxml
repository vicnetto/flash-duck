<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600" prefWidth="800" style="-fx-background-color: #e7ecec" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codeine.codingweek.AffichageCartesController">

    <MenuBar styleClass="menu">
        <fx:include source="menu.fxml" />
    </MenuBar>
    <ScrollPane fx:id="scrollPane" style="-fx-spacing: 20px;">
      <BorderPane>
         <center>
              <VBox fx:id="gridCartes" alignment="CENTER" prefHeight="500" prefWidth="783.0" style="-fx-background: #e7ecec; -fx-padding: 10 0 10 0;">
              </VBox>
         </center>
      </BorderPane>
    </ScrollPane>

    <HBox alignment="CENTER" prefHeight="130.0" prefWidth="800.0">
        <Button alignment="CENTER" onAction="#retour" styleClass="bottom_button" text="Retour" />
        <Button alignment="CENTER" onAction="#goToFormCarte" styleClass="bottom_button" text="+ Ajouter une carte" />
        <Button alignment="CENTER" mnemonicParsing="false" onAction="#exporterPile" styleClass="bottom_button" text="Exporter la pile" />
    </HBox>

</VBox>
