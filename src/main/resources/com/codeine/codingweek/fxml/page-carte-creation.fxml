<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600" prefWidth="800" style="-fx-background-color: #6272a4" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codeine.codingweek.AffichageCartesController">

    <MenuBar>
        <fx:include source="menu.fxml" />
    </MenuBar>
    <ScrollPane>
        <VBox fx:id="gridCartes" alignment="CENTER" prefHeight="500" style="-fx-background: #6272a4">
        </VBox>
    </ScrollPane>
    <HBox alignment="CENTER" prefHeight="100">
        <Button onAction="#retour" text="Retour" />
        <Button onAction="#goToFormCarte" text="+ Ajouter une carte" />
        <Button onAction="#exporterPile" mnemonicParsing="false" text="Exporter la pile" />
    </HBox>

</VBox>
