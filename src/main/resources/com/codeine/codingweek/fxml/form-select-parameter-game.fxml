<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codeine.codingweek.FormSelectParameterGameController">
   <top>
      <fx:include source="menu.fxml" />
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
         <children>
            <Button alignment="TOP_CENTER" contentDisplay="BOTTOM" graphicTextGap="80.0" mnemonicParsing="false" onAction="#goToGameWithQuestions" prefHeight="400" prefWidth="300" styleClass="card" text="Afficher les questions">
               <graphic>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/question.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button alignment="TOP_CENTER" contentDisplay="BOTTOM" graphicTextGap="20.0" mnemonicParsing="false" onAction="#goToGameWithReponses" prefHeight="400" prefWidth="300" styleClass="card" text="Afficher les réponses">
               <graphic>
                  <ImageView fitHeight="258.0" fitWidth="272.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/answer.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0" BorderPane.alignment="CENTER">
         <children>
            <CheckBox mnemonicParsing="false" text="Mélanger" fx:id="melangeBox"/>
         </children>
      </HBox>
   </bottom>
</BorderPane>
