<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codeine.codingweek.AffichagePilesController">
   <center>
      <VBox alignment="CENTER" prefHeight="600" prefWidth="800" style="-fx-background-color: #e7ecec">
      
          <ScrollPane minHeight="500" style="-fx-background: #e7ecec; -fx-border-radius: 7px; -fx-background-radius: 7px;">
              <VBox fx:id="gridPiles" alignment="CENTER">
        </VBox>
          </ScrollPane>
      
          <HBox alignment="CENTER" prefHeight="100" styleClass="button_classique">
              <Button onAction="#goToFormCreationPile" text="+ Ajouter une pile" />
              <Button mnemonicParsing="false" onAction="#importPile" text="Importer une pile" />
          </HBox>
      </VBox>
   </center>
   <top>
   
          <MenuBar styleClass="menu" BorderPane.alignment="CENTER">
           <fx:include source="menu.fxml" />
       </MenuBar>
   </top>
</BorderPane>
