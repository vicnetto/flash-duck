<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<VBox alignment="CENTER" prefHeight="600" prefWidth="800" style="-fx-background-color: #6272a4"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.codeine.codingweek.AffichagePilesController">

    <MenuBar styleClass="menu">
        <fx:include source="menu.fxml" />
    </MenuBar>

    <ScrollPane minHeight="500" style="-fx-background: #e7ecec; -fx-border-radius: 7px; -fx-background-radius: 7px; -fx-padding: 40">
        <GridPane fx:id="gridPiles" hgap="40" vgap="30" alignment="CENTER" style="-fx-background: #6272a4">
        </GridPane>
    </ScrollPane>

    <HBox alignment="CENTER" prefHeight="100" styleClass="button_classique">
        <Button onAction="#goToFormCreationPile" text="+ Ajouter une pile" />
      <Button mnemonicParsing="false" onAction="#importPile" text="Importer une pile" />
    </HBox>
</VBox>
