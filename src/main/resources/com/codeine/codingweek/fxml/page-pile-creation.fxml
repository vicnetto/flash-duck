      <VBox alignment="CENTER" prefHeight="600" prefWidth="800" style="-fx-background-color: #e7ecec">
      
          <ScrollPane minHeight="500.0" style="-fx-background: #e7ecec; -fx-border-radius: 7px; -fx-background-radius: 7px;">
