            </VBox>
            <StackPane>
                <Rectangle arcHeight="10" arcWidth="10" fill="darkcyan" height="300" stroke="black" strokeWidth="5" width="500" />
                <ImageView fx:id="image" fitHeight="280" fitWidth="280" preserveRatio="true" />
            </StackPane>
            <HBox alignment="CENTER" prefHeight="100">
                <HBox alignment="CENTER" prefWidth="350">
                    <Button onAction="#iKnew" styleClass="button_classique" text="Je savais" />
